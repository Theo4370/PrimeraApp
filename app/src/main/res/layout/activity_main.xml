<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainActivity_linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/mainActivity_textoPrincipal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estamos probando esto"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/mainActivity_editorNombre"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Escriba aqui su nombre">

    </EditText>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/mainActivity_botonEnviar"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Aceptar" />

        <Button
            android:id="@+id/mainActivity_botonColorEditText"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="CambiarColor" />


        <Button
            android:id="@+id/mainActivity_botonContenidoTextView"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="CambiarTexto" />
    </LinearLayout>

</LinearLayout>